{
  "hosting": {
    "public": "dist/portfolio",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.css",
        "headers": [{ "key": "Content-Type", "value": "text/css" }]
      },
      {
        "source": "**/*.js",
        "headers": [{ "key": "Content-Type", "value": "application/javascript" }]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/browser/index.html"
      }
    ]
  }
}
